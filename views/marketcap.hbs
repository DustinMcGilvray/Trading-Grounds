{{> dashboardheader}}

<body class="page-background" id="dashboard">

    <header>
        <h1>Market Cap</h1>

    </header>

    {{> sidenav}}

    <!--Main Content-->
    <main id="main-area">
        <!--Main Card-->
        <div id="main-card" class="card-panel z-depth-5">
            <section>

                <div class="row">
                    <div class="col l12 m12 s12">

                        <div class="row center-align">
                            <div class="col s12">
                                <ul class="tabs">
                                    <li class="tab col s4"><a target="_self" href="/stocks/marketcap/nyse">NYSE</a></li>
                                    <li class="tab col s4"><a target="_self" href="/stocks/marketcap/nasdaq">NASDAQ</a></li>
                                    <li class="tab col s4"><a target="_self" href="/stocks/marketcap/amex">AMEX</a></li>
                                </ul>
                            </div>

                            <!--NYSE TABLES-->
                            <div id="/stocks/movers/nyse" class="col s12"><span class="table">
                                    <h3>{{exchange}}</h3>
                                    <div class="card-panel center z-depth-5">
                                        <span class="table">
                                            <table class="centered highlight responsive-table">
                                                <thead>
                                                    <tr>
                                                        <th>Stock</th>
                                                        <th>Current Price</th>
                                                        <th>Change</th>
                                                        <th>Market Cap</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                 	{{#each stocks}}
														<tr class="stock-row" data-symbol="{{this.symbol}}">
														
															<td>
																<span class="stock-symbol">
																	{{this.symbol}}
																</span><br>
																<span class="company-name">
																	{{this.name}}
																</span>
															</td>
															
															<td>
																<span class="share">
																	{{this.price}}
																</span>
															</td>
															
															<td>
																<span class="big-number {{#if this.gain}}gain{{else}}loss{{/if}}">
																	{{#if this.gain}}+ {{/if}}{{this.percentChange}}
																</span><br>
																<span class="small-number {{#if this.gain}}gain{{else}}loss{{/if}}">
																	{{#if this.gain}}+ {{/if}}{{this.change}}
																</span>
															</td>
															
															<td>
																<span class="">
																	{{this.marketCap}}
																</span>
															</td>
															
														</tr>
													{{/each}}
													
                                                </tbody>
                                            </table>
                                        </span>
                                    </div>
                            </div>
                        </div>
                    </div>

                </div>
        </div>

        </section>
        </div>
    </main>

    {{> footer}}