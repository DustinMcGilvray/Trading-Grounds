{{> dashboardheader}}

<body class="page-background" id="dashboard">

    <header>
        <h1>Purchase Stock</h1>
    </header>

    {{> sidenav}}

    <!--Main Content-->
    <main id="main-area">
        <!--Main Card-->
        <div id="main-card" class="card-panel z-depth-5">

            {{> accountinfo}}

            <!--Stock View-->
            <section>
                <div class="container">
                    <div class="row center-align">
                        <div class="col l12 m12 s12">

                            <div class="row">
                                <div class="col s12 m12 l12">

                                    <div class="card">
                                        <div class="card-content white-text">
                                            <div class="row center-align">
                                                <div class="col s12 m6 l12">
                                                    <span class="company-name">
                                                        <h4>
                                                            Company Name
                                                        </h4>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row center-align">
                                                <div class="col s12 m6 l12">
                                                    <span class="card-title">
                                                        <h1>
                                                            Stock Symbol
                                                        </h1>
                                                    </span>
                                                    <span class="share-price">
                                                        <h3>
                                                            $ 0,000.00
                                                        </h3>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row center-align">
                                                <div class="col s4 m4 l4">
                                                    <span class="share-qty">
                                                        <div class="input-field">
                                                            <input placeholder="Number of Shares" id="num-shares" type="text">
                                                        </div>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row center-align">
                                                <div class="col s12 m6 l12">
                                                    <span class="total-purchase">
                                                        <h3>
                                                            $ 0,000.00
                                                        </h3>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <!--Button-->
                                        <div class="card-action">
                                            <a class="waves-effect waves-light btn" href="#">Purchase</a>
                                        </div>
                                    </div>

                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </section>

        </div>
    </main>

    {{> footer}}