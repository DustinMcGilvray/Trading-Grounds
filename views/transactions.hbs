{{> dashboardheader}}

<body class="page-background" id="dashboard">

    <header>
        <h1>Transactions</h1>
    </header>

    {{> sidenav}}

    <!--Main Content-->
    <main id="main-area">
        <!--Main Card-->
        <div id="main-card" class="card-panel z-depth-5">



            <!--Table-->
            <section>
                <div class="row">
                    <div class="col l12 m12 s12">
                        <div class="card-panel center z-depth-5">
                            <span class="table">
                                <table class="centered highlight responsive-table">
                                    <thead>
                                        <tr>
                                        	<th>Type</th>
                                        	<th>Date</th>
                                            <th>Symbol</th>
                                            <th>Name</th>
                                            <th>Shares</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    	{{#each transactions}}
                                    		<tr class="stock-row" data-symbol="{{this.symbol}}">
                                    			<td>{{this.type}}</td>
                                    			<td>{{this.date}}</td>
                                    			<td>{{this.symbol}}</td>
                                    			<td>{{this.name}}</td>
                                    			<td>{{this.shares}}</td>
                                    			<td>{{this.price}}</td>
                                    			<td>{{this.total}}</td>
                                    		</tr>
                                    	{{/each}}
                                    </tbody>
                                </table>
                            </span>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    {{> footer}}